<p id="notice"><%= notice %></p>

<h1>Structures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact</th>
      <th>Email</th>
      <th>Variety</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @structures.each do |structure| %>
      <tr>
        <td><%= structure.name %></td>
        <td><%= structure.contact %></td>
        <td><%= structure.email %></td>
        <td><%= structure.variety %></td>
        <td><%= link_to 'Show', structure %></td>
        <td><%= link_to 'Edit', edit_structure_path(structure) %></td>
        <td><%= link_to 'Destroy', structure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2>Google Answer</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Open ?</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
  <% @results.each do |business| %>
    <tr>
      <td><%= business["name"] %></td>
      <td> <% if business["opening_hours"] %> Open <% else %> Close <% end %> </td>
      <td><%= business["rating"] %></td>
    </tr>
  <% end %>
  <tbody>

</table>
<%= link_to 'New Structure', new_structure_path %>
